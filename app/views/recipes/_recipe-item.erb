<div class="flex py-1">
    <input  type="text" 
            class="w-2/4 p-1 border"
            value=<%= "TODO" %> />
    <label  for="price" class="w-1/4 text-right p-1">Count: </label>
    <%= number_field_tag("count", item.count, { 
                data: { reflex: "input->RecipeLineItemReflex#update_count", id: item.id },
                class: "w-1/4 text-center border" }) %>
</div>
<div class="flex p-1">
    <label  for="price" 
            class="w-3/4 text-right p-1">Price: </label>
    <input  type="text" 
            value=<%= "$#{item.price}" %>
            class="w-1/4 p-1 text-right border" 
            />
</div>
<div class="flex p-1 font-bold">
    <div class="w-3/4 p-1 text-right">Total Count: </div>
    <div class="w-1/4 p-1 text-right"><%= item.total_count(recipe_count) %></div>
</div>
<div class="flex p-1 font-bold">
    <div class="w-3/4 p-1 text-right">Total Cost: </div>
    <div class="w-1/4 p-1 text-right">$<%= item.total_price(recipe_count) %></div>
</div>